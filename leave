        function initApp() {
            // Update UI elements
            updateCountdown();
            updateProgress();
            updatePartnersProgress();
            
            // Set up countdown interval
            setInterval(updateCountdown, 1000);
            
            // Set up partners progress interval (simulating data updates)
            setInterval(updatePartnersProgress, 5000);
            
            // Check for saved dark mode preference
            if (localStorage.getItem('darkMode') === 'enabled') {
                document.body.classList.add('dark-mode');
                document.getElementById('toggleDark').innerHTML = '<i class="fas fa-sun"></i>';
            }
            
            // Render all topics
            renderAllTopics();
            
            // Render partner tasks
            renderPartnerTasks();
            
            // Update subject progress
            updateSubjectProgress();
        }

        function showApp() {
            console.log("Enter button clicked - showing main app");
            document.getElementById('countdownScreen').classList.add('hidden');
            document.getElementById('appContainer').classList.remove('hidden');
        }

        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('open');
            document.getElementById('sidebarOverlay').classList.toggle('open');
        }

        function toggleDarkMode() {
            document.body.classList.toggle('dark-mode');
            const button = document.getElementById('toggleDark');
            
            if (document.body.classList.contains('dark-mode')) {
                button.innerHTML = '<i class="fas fa-sun"></i>';
                localStorage.setItem('darkMode', 'enabled');
            } else {
                button.innerHTML = '<i class="fas fa-moon"></i>';
                localStorage.setItem('darkMode', 'disabled');
            }
        }

        function switchSection(sectionId) {
            // Update active nav item
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            document.querySelector(`[data-section="${sectionId}"]`).classList.add('active');
            
            // Update page title
            const titles = {
                'dashboard': 'Dashboard',
                'subjects': 'Subjects',
                'partners': 'Partners',
                'partner-tasks': 'Partner Tasks'
            };
            document.getElementById('pageTitle').textContent = titles[sectionId] || 'Dashboard';
            
            // Show section
            document.querySelectorAll('.content-section').forEach(section => {
                section.classList.remove('active');
            });
            document.getElementById(sectionId).classList.add('active');
            
            // Close sidebar on mobile
            if (window.innerWidth < 1024) {
                toggleSidebar();
            }
        }

        function updateCountdown() {
            // Set the deadline to December 7, 2025 at midday (12:00 PM)
            const deadline = new Date('December 7, 2025 12:00:00').getTime();
            const now = new Date().getTime();
            const diff = deadline - now;
            
            if (diff <= 0) {
                // If the deadline has passed
                document.getElementById('days').textContent = '0';
                document.getElementById('hours').textContent = '0';
                document.getElementById('minutes').textContent = '0';
                document.getElementById('seconds').textContent = '0';
                
                // Update the initial countdown screen
                if (document.getElementById('initialCountdown')) {
                    document.getElementById('initialCountdown').textContent = 'EXAMS HAVE BEGUN!';
                }
                
                // Update the dashboard countdown
                document.getElementById('scareText').textContent = 'EXAMS HAVE BEGUN!';
                return;
            }
            
            // Calculate time units
            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);
            
            // Update the dashboard countdown
            document.getElementById('days').textContent = days;
            document.getElementById('hours').textContent = hours;
            document.getElementById('minutes').textContent = minutes;
            document.getElementById('seconds').textContent = seconds;
            
            // Update the initial countdown screen
            if (document.getElementById('initialCountdown')) {
                document.getElementById('initialCountdown').textContent = 
                    `${days}d ${hours}h ${minutes}m ${seconds}s left`;
            }
            
            // Update scare text randomly
            const scareSayings = [
                "⏳ Time is slipping away!",
                "🔥 Every second counts!",
                "😱 Your exams are almost here!",
                "💼 Only the prepared will pass!",
                "⚖️ Justice favors the diligent!"
            ];
            
            if (Math.random() < 0.01) {
                document.getElementById('scareText').textContent = 
                    scareSayings[Math.floor(Math.random() * scareSayings.length)];
            }
        }

        function updateProgress() {
            const totalSubjects = 25;
            const completedSubjects = document.querySelectorAll('.subject-topic-checkbox:checked').length;
            const percent = Math.round((completedSubjects / totalSubjects) * 100);
            
            document.getElementById("progressBar").style.width = percent + "%";
            document.getElementById("progressText").textContent = `${completedSubjects}/${totalSubjects} Subjects (${percent}%) Completed`;
            
            // Update statistics
            document.getElementById('completedSubjects').textContent = completedSubjects;
            document.getElementById('progressPercent').textContent = percent + '%';
            document.getElementById('completedStats').textContent = completedSubjects;
            document.getElementById('remainingStats').textContent = totalSubjects - completedSubjects;
            document.getElementById('progressStats').textContent = percent + '%';
            
            // Save progress to localStorage
            saveProgress();
        }

        function updatePartnersProgress() {
            // In a real implementation, this would fetch data from external sources
            // For demo purposes, we'll simulate progress updates
            
            const partners = [
                { id: 'baluti', subjects: ['civil', 'corporate', 'family', 'criminal', 'land'] },
                { id: 'benon', subjects: ['civil', 'corporate', 'family', 'criminal', 'land'] },
                { id: 'elizabeth', subjects: ['civil', 'corporate', 'family', 'criminal', 'land'] },
                { id: 'ashraf', subjects: ['civil', 'corporate', 'family', 'criminal', 'land'] },
                { id: 'elvis', subjects: ['civil', 'corporate', 'family', 'criminal', 'land'] },
                { id: 'vincent', subjects: ['civil', 'corporate', 'family', 'criminal', 'land'] },
                { id: 'abdul', subjects: ['civil', 'corporate', 'family', 'criminal', 'land'] },
                { id: 'ezra', subjects: ['civil', 'corporate', 'family', 'criminal', 'land'] }
            ];
            
            partners.forEach(partner => {
                let totalProgress = 0;
                
                partner.subjects.forEach(subject => {
                    // Simulate progress (in a real app, this would come from external APIs)
                    const progress = Math.min(100, Math.floor(Math.random() * 30) + (Math.random() > 0.7 ? 30 : 0));
                    totalProgress += progress;
                    
                    // Update subject progress
                    const element = document.getElementById(`${partner.id}-${subject}`);
                    if (element) {
                        element.textContent = `${progress}%`;
                    }
                });
                
                // Calculate average progress
                const avgProgress = Math.round(totalProgress / partner.subjects.length);
                
                // Update overall progress
                const progressBar = document.getElementById(`${partner.id}-progress`);
                const overallText = document.getElementById(`${partner.id}-overall`);
                
                if (progressBar) {
                    progressBar.style.width = `${avgProgress}%`;
                }
                
                if (overallText) {
                    overallText.textContent = `${avgProgress}%`;
                }
            });
        }

        function saveProgress() {
            // Save subject progress to localStorage
            const progress = {};
            document.querySelectorAll('.subject-topic-checkbox').forEach(checkbox => {
                progress[checkbox.id] = checkbox.checked;
            });
            localStorage.setItem('subjectProgress', JSON.stringify(progress));
        }

        function resetApp() {
            if (confirm("Are you sure you want to reset the entire app? This will clear all your progress and study plans.")) {
                localStorage.clear();
                location.reload();
            }
        }

        // Subject Progress Functions
        function renderAllTopics() {
            // Render topics for each subject
            Object.keys(allTopics).forEach(subject => {
                const topicsList = document.getElementById(`${subject}-topics-list`);
                if (topicsList) {
                    renderTopicsForSubject(subject, topicsList);
                }
            });
        }

        function renderTopicsForSubject(subject, topicsList) {
            topicsList.innerHTML = '';
            
            allTopics[subject].forEach(topic => {
                const topicItem = document.createElement('li');
                topicItem.className = 'topic-item';
                
                // Calculate topic progress
                const completedSubtopicCount = topic.subtopics.filter(
                    subtopic => localStorage.getItem(subtopic.id) === 'completed'
                ).length;
                const totalSubtopicCount = topic.subtopics.length;
                const topicProgress = `${completedSubtopicCount}/${totalSubtopicCount}`;
                
                topicItem.innerHTML = `
                    <input type="checkbox" class="topic-checkbox" id="${topic.id}">
                    <div class="topic-content">
                        <div class="topic-title">
                            ${topic.title}
                            <span class="topic-progress">${topicProgress}</span>
                        </div>
                        <div class="topic-description">${topic.description}</div>
                        <div class="subtopics">
                            ${topic.subtopics.map(subtopic => {
                                const isCompleted = localStorage.getItem(subtopic.id) === 'completed';
                                return `
                                    <div class="subtopic ${isCompleted ? 'completed' : ''}" data-id="${subtopic.id}">
                                        <input type="checkbox" class="subtopic-checkbox" ${isCompleted ? 'checked' : ''}>
                                        <span class="subtopic-text">${subtopic.text}</span>
                                    </div>
                                `;
                            }).join('')}
                        </div>
                        <div class="subtopic-progress">
                            <span>Sub-topic progress:</span>
                            <div class="subtopic-progress-bar">
                                <div class="subtopic-progress-inner" style="width: ${(completedSubtopicCount / totalSubtopicCount) * 100}%"></div>
                            </div>
                            <span>${completedSubtopicCount}/${totalSubtopicCount}</span>
                        </div>
                    </div>
                `;
                
                topicsList.appendChild(topicItem);
                
                // Add event listener to main topic checkbox
                const topicCheckbox = topicItem.querySelector('.topic-checkbox');
                topicCheckbox.checked = completedSubtopicCount === totalSubtopicCount;
                topicCheckbox.addEventListener('change', function() {
                    const shouldComplete = this.checked;
                    topic.subtopics.forEach(subtopic => {
                        if (shouldComplete) {
                            localStorage.setItem(subtopic.id, 'completed');
                        } else {
                            localStorage.removeItem(subtopic.id);
                        }
                    });
                    renderAllTopics();
                    updateSubjectProgress();
                });
                
                // Add event listeners to subtopic checkboxes
                topicItem.querySelectorAll('.subtopic').forEach(subtopicEl => {
                    const subtopicId = subtopicEl.getAttribute('data-id');
                    const subtopicCheckbox = subtopicEl.querySelector('.subtopic-checkbox');
                    
                    subtopicEl.addEventListener('click', function(e) {
                        if (e.target !== subtopicCheckbox) {
                            subtopicCheckbox.checked = !subtopicCheckbox.checked;
                        }
                        
                        if (subtopicCheckbox.checked) {
                            localStorage.setItem(subtopicId, 'completed');
                            subtopicEl.classList.add('completed');
                        } else {
                            localStorage.removeItem(subtopicId);
                            subtopicEl.classList.remove('completed');
                        }
                        
                        // Update topic progress
                        renderAllTopics();
                        updateSubjectProgress();
                    });
                });
            });
        }

        function updateSubjectProgress() {
            let totalSubtopicCount = 0;
            let completedSubtopicCount = 0;
            let totalTopicCount = 0;
            let completedTopicCount = 0;
            
            // Calculate progress across all subjects
            Object.keys(allTopics).forEach(subject => {
                allTopics[subject].forEach(topic => {
                    totalTopicCount++;
                    totalSubtopicCount += topic.subtopics.length;
                    const completedInTopic = topic.subtopics.filter(
                        subtopic => localStorage.getItem(subtopic.id) === 'completed'
                    ).length;
                    completedSubtopicCount += completedInTopic;
                    
                    if (completedInTopic === topic.subtopics.length) {
                        completedTopicCount++;
                    }
                });
            });
            
            const percent = Math.round((completedSubtopicCount / totalSubtopicCount) * 100);
            
            // Update progress bar
            document.getElementById('subjectProgressBar').style.width = percent + '%';
            document.getElementById('subjectProgressText').textContent = `${completedTopicCount}/${totalTopicCount} topics completed • ${completedSubtopicCount}/${totalSubtopicCount} sub-topics completed`;
            
            // Update statistics
            document.getElementById('totalTopics').textContent = totalTopicCount;
            document.getElementById('completedTopics').textContent = completedTopicCount;
            document.getElementById('remainingTopics').textContent = totalTopicCount - completedTopicCount;
            document.getElementById('progressPercentage').textContent = percent + '%';
        }

        function markAllComplete() {
            if (confirm("Are you sure you want to mark all topics and sub-topics as complete?")) {
                Object.keys(allTopics).forEach(subject => {
                    allTopics[subject].forEach(topic => {
                        topic.subtopics.forEach(subtopic => {
                            localStorage.setItem(subtopic.id, 'completed');
                        });
                    });
                });
                renderAllTopics();
                updateSubjectProgress();
                alert('All topics and sub-topics marked as complete!');
            }
        }

        function resetProgress() {
            if (confirm("Are you sure you want to reset all progress?")) {
                Object.keys(allTopics).forEach(subject => {
                    allTopics[subject].forEach(topic => {
                        topic.subtopics.forEach(subtopic => {
                            localStorage.removeItem(subtopic.id);
                        });
                    });
                });
                renderAllTopics();
                updateSubjectProgress();
                alert('Progress reset successfully!');
            }
        }

        function exportProgress() {
            let completedSubtopicCount = 0;
            let totalSubtopicCount = 0;
            
            // Create a CSV string
            let csv = 'Subject,Topic,Sub-topic,Completed\n';
            Object.keys(allTopics).forEach(subject => {
                const subjectName = getSubjectName(subject);
                allTopics[subject].forEach(topic => {
                    totalSubtopicCount += topic.subtopics.length;
                    topic.subtopics.forEach(subtopic => {
                        const isCompleted = localStorage.getItem(subtopic.id) === 'completed';
                        if (isCompleted) completedSubtopicCount++;
                        csv += `"${subjectName}","${topic.title}","${subtopic.text}",${isCompleted ? 'Yes' : 'No'}\n`;
                    });
                });
            });
            
            const percent = Math.round((completedSubtopicCount / totalSubtopicCount) * 100);
            csv += `\nOverall Progress,${completedSubtopicCount}/${totalSubtopicCount} (${percent}%)\n`;
            
            // Create a download link
            const blob = new Blob([csv], { type: 'text/csv' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'ldc-study-progress.csv';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            
            alert('LDC Study progress exported successfully!');
        }

        function getSubjectName(subjectKey) {
            const subjectNames = {
                civil: 'Civil Proceedings',
                corporate: 'Corporate & Commercial Practice',
                family: 'Family Law Practice',
                criminal: 'Criminal Proceedings',
                land: 'Land Transactions'
            };
            return subjectNames[subjectKey] || subjectKey;
        }

        // Partner Task Functions
        function renderPartnerTasks() {
            Object.keys(partnerTasks).forEach(partner => {
                const taskList = document.getElementById(`${partner}-tasks`);
                if (taskList) {
                    renderTasksForPartner(partner, taskList);
                }
            });
        }

        function renderTasksForPartner(partner, taskList) {
            taskList.innerHTML = '';
            
            partnerTasks[partner].forEach(task => {
                const taskItem = document.createElement('li');
                taskItem.className = 'partner-task-item';
                
                const isCompleted = localStorage.getItem(task.id) === 'completed';
                
                taskItem.innerHTML = `
                    <input type="checkbox" class="partner-task-checkbox" id="${task.id}" ${isCompleted ? 'checked' : ''}>
                    <span class="partner-task-text">${task.text}</span>
                `;
                
                taskList.appendChild(taskItem);
                
                // Add event listener to task checkbox
                const taskCheckbox = taskItem.querySelector('.partner-task-checkbox');
                taskCheckbox.addEventListener('change', function() {
                    if (this.checked) {
                        localStorage.setItem(task.id, 'completed');
                    } else {
                        localStorage.removeItem(task.id);
                    }
                    updatePartnerTaskProgress(partner);
                });
            });
            
            updatePartnerTaskProgress(partner);
        }

        function updatePartnerTaskProgress(partner) {
            const tasks = partnerTasks[partner];
            const completedTasks = tasks.filter(task => localStorage.getItem(task.id) === 'completed').length;
            const totalTasks = tasks.length;
            const percent = Math.round((completedTasks / totalTasks) * 100);
            
            // Update progress bar
            const progressBar = document.getElementById(`${partner}-task-progress`);
            if (progressBar) {
                progressBar.style.width = `${percent}%`;
            }
            
            // Update percentage text
            const percentText = document.getElementById(`${partner}-task-percent`);
            if (percentText) {
                percentText.textContent = `${percent}%`;
            }
        }

        // Print and Save Functions
        function printSubject(subject) {
            // Hide all elements except the subject content
            const subjectContent = document.getElementById(`${subject}-content`);
            const printSection = subjectContent.querySelector('.print-section');
            
            // Create a temporary container for printing
            const printContainer = document.createElement('div');
            printContainer.className = 'print-container';
            printContainer.innerHTML = printSection.outerHTML;
            
            // Add print styles
            const printStyles = document.createElement('style');
            printStyles.innerHTML = `
                @media print {
                    body * {
                        visibility: hidden;
                    }
                    .print-container, .print-container * {
                        visibility: visible;
                    }
                    .print-container {
                        position: absolute;
                        left: 0;
                        top: 0;
                        width: 100%;
                        padding: 20px;
                    }
                    .no-print {
                        display: none !important;
                    }
                    .card {
                        box-shadow: none;
                        border: 1px solid #ddd;
                        page-break-inside: avoid;
                    }
                    .btn, .sidebar, .header, .quick-actions, .subject-tabs, .print-save-buttons {
                        display: none !important;
                    }
                }
            `;
            
            document.head.appendChild(printStyles);
            document.body.appendChild(printContainer);
            
            // Print and clean up
            window.print();
            
            document.body.removeChild(printContainer);
            document.head.removeChild(printStyles);
        }

        function saveSubject(subject) {
            const subjectContent = document.getElementById(`${subject}-content`);
            const printSection = subjectContent.querySelector('.print-section');
            
            // Create a blob with the HTML content
            const blob = new Blob([printSection.outerHTML], { type: 'text/html' });
            const url = URL.createObjectURL(blob);
            
            // Create a download link
            const a = document.createElement('a');
            a.href = url;
            a.download = `${getSubjectName(subject)} - Study Materials.html`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            
            alert(`${getSubjectName(subject)} materials saved successfully!`);
        }

        function printPartnerTasks() {
            // Create a temporary container for printing
            const printContainer = document.createElement('div');
            printContainer.className = 'print-container';
            
            // Get all partner task cards
            const partnerTaskCards = document.querySelectorAll('.partner-task-card');
            partnerTaskCards.forEach(card => {
                printContainer.appendChild(card.cloneNode(true));
            });
            
            // Add print styles
            const printStyles = document.createElement('style');
            printStyles.innerHTML = `
                @media print {
                    body * {
                        visibility: hidden;
                    }
                    .print-container, .print-container * {
                        visibility: visible;
                    }
                    .print-container {
                        position: absolute;
                        left: 0;
                        top: 0;
                        width: 100%;
                        padding: 20px;
                    }
                    .no-print {
                        display: none !important;
                    }
                    .card {
                        box-shadow: none;
                        border: 1px solid #ddd;
                        page-break-inside: avoid;
                    }
                    .btn, .sidebar, .header, .quick-actions, .subject-tabs, .print-save-buttons {
                        display: none !important;
                    }
                }
            `;
            
            document.head.appendChild(printStyles);
            document.body.appendChild(printContainer);
            
            // Print and clean up
            window.print();
            
            document.body.removeChild(printContainer);
            document.head.removeChild(printStyles);
        }

        function savePartnerTasks() {
            // Get all partner task cards
            const partnerTaskCards = document.querySelectorAll('.partner-task-card');
            let htmlContent = '<h1>LIONHUNT PARTNERSHIP - Partner Task Distribution</h1>';
            
            partnerTaskCards.forEach(card => {
                htmlContent += card.outerHTML;
            });
            
            // Create a blob with the HTML content
            const blob = new Blob([htmlContent], { type: 'text/html' });
            const url = URL.createObjectURL(blob);
            
            // Create a download link
            const a = document.createElement('a');
            a.href = url;
            a.download = 'LIONHUNT PARTNERSHIP - Partner Tasks.html';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            
            alert('Partner tasks saved successfully!');
        }

        // Load saved progress when the app starts
        window.addEventListener('load', function() {
            // Load progress from localStorage
            const progress = JSON.parse(localStorage.getItem('subjectProgress') || '{}');
            for (const id in progress) {
                const checkbox = document.getElementById(id);
                if (checkbox) {
                    checkbox.checked = progress[id];
                }
            }
        });
    </script>
</body>
</html>

