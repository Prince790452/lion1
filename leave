    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize the app
            initApp();
            
            // Set up event listeners
            document.getElementById('enterAppBtn').addEventListener('click', showApp);
            document.getElementById('sidebarToggle').addEventListener('click', toggleSidebar);
            document.getElementById('sidebarOverlay').addEventListener('click', toggleSidebar);
            document.getElementById('toggleDark').addEventListener('click', toggleDarkMode);
            document.getElementById('resetAppBtn').addEventListener('click', resetApp);
            
            // Navigation
            document.querySelectorAll('.nav-item').forEach(item => {
                if (item.id !== 'resetAppBtn') {
                    item.addEventListener('click', function(e) {
                        e.preventDefault();
                        switchSection(this.getAttribute('data-section'));
                    });
                }
            });
            
            // Subject tab listeners
            document.querySelectorAll('.subject-tab').forEach(tab => {
                tab.addEventListener('click', function() {
                    // Remove active class from all tabs
                    document.querySelectorAll('.subject-tab').forEach(t => {
                        t.classList.remove('active');
                    });
                    
                    // Add active class to clicked tab
                    this.classList.add('active');
                    
                    // Hide all subject contents
                    document.querySelectorAll('.subject-content').forEach(content => {
                        content.classList.remove('active');
                    });
                    
                    // Show selected subject content
                    const subject = this.getAttribute('data-subject');
                    document.getElementById(`${subject}-content`).classList.add('active');
                    
                    // Update progress for the selected subject
                    updateSubjectProgress();
                });
            });
            
            // Subject progress actions
            document.getElementById('markAllComplete').addEventListener('click', markAllComplete);
            document.getElementById('resetProgress').addEventListener('click', resetProgress);
            document.getElementById('exportProgress').addEventListener('click', exportProgress);
        });

        // All Topics Data - Consolidated from both study planners
        const allTopics = {
            civil: [
                {
                    id: 'civil1',
                    title: 'Interviewing Clients',
                    description: 'Developing a checklist/interview guide for conducting an interview, interviewing a client and any potential witness before action, taking instructions and preparations of engagement letters. Ethical aspects to take care of at this initial contact stage.',
                    subtopics: [
                        { id: 'civil1-1', text: 'Developing checklist/interview guide' },
                        { id: 'civil1-2', text: 'Interviewing client and potential witnesses' },
                        { id: 'civil1-3', text: 'Taking instructions' },
                        { id: 'civil1-4', text: 'Preparation of engagement letters' },
                        { id: 'civil1-5', text: 'Ethical aspects at initial contact stage' }
                    ]
                },
                {
                    id: 'civil2',
                    title: 'Advising Clients and Drafting Pleadings',
                    description: 'Advising on parties, causes of action, limitations, joinder of parties & causes of action, remedies available, possible defences, drafting letters before action, service of pre-action documents.',
                    subtopics: [
                        { id: 'civil2-1', text: 'Parties: Natural persons, Artificial persons, Attorney General' },
                        { id: 'civil2-2', text: 'Causes of action: Breach of contract, Fraud, Negligence, Defamation, Liability for loss of support, Nuisance, Unfair termination' },
                        { id: 'civil2-3', text: 'Limitations and statutory bars' },
                        { id: 'civil2-4', text: 'Joinder of parties & causes of action' },
                        { id: 'civil2-5', text: 'Remedies: Out of court settlements, Declaratory Orders, Special Damages, General Damages, Exemplary Damages, Punitive Damages, Nominal Damages' },
                        { id: 'civil2-6', text: 'Possible defences and statutory bars' },
                        { id: 'civil2-7', text: 'Drafting letters before action' },
                        { id: 'civil2-8', text: 'Service of pre-action documents' }
                    ]
                },
                {
                    id: 'civil3',
                    title: 'Institution of Suits and Actions',
                    description: 'Institution of suits by parties or through recognized agents and advocates. Modes of institution of suits, determination of jurisdiction, drafting of pleadings, filing of suits, issuance and service of summons, dismissal of suits without trial.',
                    subtopics: [
                        { id: 'civil3-1', text: 'Modes of institution: Plaints, Petitions, Originating summons, Notice of motions, Chamber summons, Complaint on oaths, Complaints, References, Memorandum' },
                        { id: 'civil3-2', text: 'Determination of jurisdiction (territorial & pecuniary)' },
                        { id: 'civil3-3', text: 'Chief Magistrate Courts unlimited original jurisdiction circumstances' },
                        { id: 'civil3-4', text: 'Drafting pleadings for commencement of suits' },
                        { id: 'civil3-5', text: 'Filing suits: Manual system and ECCMIS' },
                        { id: 'civil3-6', text: 'Computation/assessment of filing fees' },
                        { id: 'civil3-7', text: 'Issuance of summons' },
                        { id: 'civil3-8', text: 'Service of summons within Uganda' },
                        { id: 'civil3-9', text: 'Proof of service' },
                        { id: 'civil3-10', text: 'Dealing with problematic summons' },
                        { id: 'civil3-11', text: 'Dismissal of suits without trial' },
                        { id: 'civil3-12', text: 'Default/interlocutory/ex-parte judgments and decrees' }
                    ]
